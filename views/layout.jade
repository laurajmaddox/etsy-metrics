doctype html
html

  head
    title= title

    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/js/base.js')

    block style-custom

  body
    .navbar.navbar-default
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='nav-collapsed-content')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/") ETSY SELLER METRICS
            .collapse.navbar-collapse#nav-collapsed-content
                form.navbar-form.navbar-right.search(role='search', name='search-form', action='/search', method='GET')
                    .form-group
                        input.form-control.input-sm(type='text', name='tag', maxlength='20', placeholder='Find listings by tag')
                    button.btn.btn-sm(type='submit')
                        span.glyphicon.glyphicon-search
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='/help') Help
                    li.dropdown
                        a(href='#', data-toggle='dropdown', role='button', aria-expanded='false').dropdown-toggle About 
                            span.caret
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='/about') Info
                            li.divider
                            li
                                a(href='/contact') Contact

    block content

    .container-fluid#footer
        .row
            .container
                .row
                    .col-lg-12.text-center &copy; Copyright 2014 Etsy Seller Metrics
